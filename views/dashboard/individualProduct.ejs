<% layout('boilerplate/boiler') -%><% layout('boilerplate/boiler') -%>
<% if(product){ %>
    <div class="dashboard-container">
        <p>Product Name: <%= product.name %></p>
        <div class="dashboard-content">
            <div class="card">
                    <div class="card-content">
                        <img src="<%=product.image.url%>">
                            <div class="card-info">
                                <p><%= product.name  %><p>
                                <p>$<%= product.price %></p>
                                <p><%= product.description %> Cal</p>
                                <a href="/products/<%= product._id %>/edit" class="view-more-btn" >Edit Product</a>
                                <form class="card-form" action="/product/<%= product._id %>?_method=DELETE" method="post">
                                   <button type="submit">Delete Product</button>
                                </form>
                            </div>
                    </div>      
            </div>
        </div>
    </div>
<% } %>
